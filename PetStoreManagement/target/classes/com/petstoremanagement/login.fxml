<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.petstoremanagement.Controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <Label text="LOGIN" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField" promptText="Username"
                       style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>

            <Button text="Login"
                    style="-fx-pref-width: 250px; -fx-pref-height: 35px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Chưa có tài khoản?"/>
                <Hyperlink text="Đăng ký"/>
            </HBox>
        </VBox>
    </children>


</AnchorPane>
