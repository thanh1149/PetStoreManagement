<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.petstoremanagement.Controller.ForgotPasswordTokenController">
    <children>
        <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" spacing="20.0">
            <Label text="Enter Reset Token">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <TextField fx:id="tokenField" promptText="Enter 6-digit token" />
            <Button fx:id="submitButton" text="Submit" />
            <Label fx:id="messageLabel" />
        </VBox>
    </children>
</AnchorPane>