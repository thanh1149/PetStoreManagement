<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.petstoremanagement.Controller.staff.AddStaffController">
    <children>
        <BorderPane layoutX="14.0" layoutY="14.0">
            <center>
                <GridPane alignment="CENTER" prefHeight="332.0" prefWidth="712.0" vgap="10" hgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <Label text="FullName" />
                    <TextField fx:id="txtFullName" promptText="Staff name" GridPane.columnIndex="1" />

                    <Label text="Username" GridPane.rowIndex="1" />
                    <TextField fx:id="txtUsername" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Password" GridPane.rowIndex="2" />
                    <PasswordField fx:id="txtPassword" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Confirm Password" GridPane.rowIndex="3" />
                    <PasswordField fx:id="txtConfirmPw" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Email" GridPane.rowIndex="4" />
                    <TextField fx:id="txtEmail" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Phone" GridPane.rowIndex="5" />
                    <TextField fx:id="txtPhone" promptText="Phone" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <Label text="Role" GridPane.rowIndex="6" />
                    <ChoiceBox fx:id="cbRole" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <Button fx:id="btnAdd" mnemonicParsing="false" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.halignment="CENTER" />
                </GridPane>
            </center>
            <top>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add New Staff" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
