<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.petstoremanagement.Controller.order.OrderController">
    <StackPane fx:id="orderContent" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <BorderPane prefHeight="521.0" prefWidth="743.0">
            <padding>
                <Insets left="30.0" right="30.0" top="20.0" />
            </padding>
            <top>
                <GridPane alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <BorderPane.margin>
                        <Insets top="20.0" />
                    </BorderPane.margin>
                    <AnchorPane GridPane.rowIndex="0">
                        <!-- Search Field -->
                        <TextField fx:id="txtOrderSearch" layoutX="1.0" layoutY="2.0" prefHeight="25.0" prefWidth="291.0" promptText="Search order" />
                        <Button fx:id="btnSearchOrder" layoutX="300.0" layoutY="2.0" mnemonicParsing="false" prefHeight="26.0" styleClass="button, info, sm" text="Search" />
                    </AnchorPane>
                    <!-- Add filter, sort buttons -->
                    <HBox spacing="10.0" GridPane.rowIndex="0" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
                        <Button fx:id="btnFilter" styleClass="button, info, sm" mnemonicParsing="false" prefHeight="26.0" text="Filter"/>
                        <MenuButton fx:id="mnSort" text="Sort" styleClass="button, info, sm" prefHeight="26.0">
                            <items>
                                <MenuItem fx:id="sortByDateAsc" text="Sort by Date (Newest to Oldest)" />
                                <MenuItem fx:id="sortByDateDesc" text="Sort by Date (Oldest to Newest)" />
                                <MenuItem fx:id="sortByAmountAsc" text="Sort by Amount (Low to High)" />
                                <MenuItem fx:id="sortByAmountDesc" text="Sort by Amount (High to Low)" />
                            </items>
                        </MenuButton>
                    </HBox>
                </GridPane>
            </top>
            <center>
                <!-- Order Table -->
                <TableView fx:id="tblOrder" editable="true" prefHeight="663.0" prefWidth="1220.0">
                    <columns>
                        <TableColumn fx:id="cOrderID" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="cCustomer" prefWidth="150.0" text="Customer" />
                        <TableColumn fx:id="cOrderDate" prefWidth="150.0" text="Date" />
                        <TableColumn fx:id="cTotal" prefWidth="125.0" text="Total" />
                        <TableColumn fx:id="cStatus" prefWidth="100.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                </TableView>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="1220.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <!-- Pagination or footer elements can go here -->
                </HBox>
            </bottom>
        </BorderPane>
    </StackPane>
</AnchorPane>

